<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/mLoadingRL"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/addCancelAppointmentLDAIB"
            app:layout_constraintEnd_toEndOf="@+id/addCancelAppointmentLDAIB"
            app:layout_constraintStart_toStartOf="@+id/addCancelAppointmentLDAIB"
            app:layout_constraintTop_toTopOf="@+id/addCancelAppointmentLDAIB"
            app:loading_color="@color/colorPrimaryDark"
            app:loading_width="1dp" />

        <ImageButton
            android:id="@+id/addCancelAppointmentLDAIB"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="11dp"
            android:background="@android:color/transparent"
            android:src="@drawable/send_request_cyan"
            app:layout_constraintBottom_toBottomOf="@+id/doctorNameLDATV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/doctorNameLDATV" />

        <TextView
            android:id="@+id/doctorNameLDATV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="Doctor Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/addCancelAppointmentLDAIB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/doctorSpecialistLDATV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="Speacialist: Cardiologist"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/addCancelAppointmentLDAIB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorNameLDATV" />

        <TextView
            android:id="@+id/doctorClinicLDATV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Clinic: 47/10 West Razabazar, Dhaka"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/addCancelAppointmentLDAIB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorSpecialistLDATV" />

        <TextView
            android:id="@+id/appointmentLDATV"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="2dp"
            android:text="Appointments:"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/addCancelAppointmentLDAIB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorClinicLDATV" />

        <LinearLayout
            android:id="@+id/appointmentListLDALL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="11dp"
            android:layout_marginStart="11dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointmentLDATV">

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>