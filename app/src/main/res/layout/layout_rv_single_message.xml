<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_to"
        android:maxWidth="250dp"
        android:padding="8dp"
        android:text="This is formal message of a user! This is formal message of a user!"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/messageImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/message_to"
        android:cropToPadding="true"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nophoto"
        android:visibility="visible" />

    <Button
        android:id="@+id/viewPrescriptionBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/message_prescription"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="View Prescription"
        android:textColor="@android:color/white" />

</LinearLayout>