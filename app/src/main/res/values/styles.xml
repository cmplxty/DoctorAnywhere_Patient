<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorSecondaryDark</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.MapTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorDarkGrayDK</item>
    </style>

    <style name="AppTheme.BloodDonor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorSecondaryDark</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.CropImage" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
    </style>

    <style name="AppTheme.ViewImage" parent="AppTheme.Fullscreen">
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme.DateTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorLight_DK1Cyan</item>
    </style>

    <style name="SpotDialogTheme" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Theme.Dialog</item>
        <item name="DialogSpotColor">@color/colorPrimaryDark</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
